<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Livres Rares - Boutique en ligne{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>üìö</text></svg>">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
        <style>
            .navbar-brand {
                font-weight: bold;
                color: #8B4513 !important;
            }
            .card-img-top {
                height: 250px;
                object-fit: cover;
            }
            .product-card {
                transition: transform 0.2s;
            }
            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            }
            .hero-section {
                background: linear-gradient(135deg, #8B4513, #D2691E);
                color: white;
                padding: 4rem 0;
            }
            .footer {
                background-color: #2c3e50;
                color: white;
                margin-top: 3rem;
            }
            .star-rating {
                color: #ffc107;
            }
            .price {
                font-size: 1.2rem;
                font-weight: bold;
                color: #28a745;
            }
            .condition-badge {
                font-size: 0.8rem;
            }
            .cart-badge {
                position: relative;
                top: -2px;
            }
        </style>
    {% endblock %}
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <i class="fas fa-book"></i> Livres Rares
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_products') }}">Livres</a>
                </li>
            </ul>

            <!-- Search Form -->
            <form class="d-flex me-3" method="GET" action="{{ path('app_product_search') }}">
                <input class="form-control me-2" type="search" name="q" placeholder="Rechercher un livre..." value="{{ app.request.query.get('q') }}">
                <button class="btn btn-outline-primary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>

            <ul class="navbar-nav">
                {% if app.user %}
                    <!-- Cart Icon -->
                    <li class="nav-item">
                        <a class="nav-link position-relative" href="{{ path('app_cart_index') }}">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="badge bg-primary cart-badge" id="cart-count">
                                        {{ app.user.cart ? app.user.cart.totalItems : 0 }}
                                    </span>
                        </a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i> {{ app.user.firstName }}
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Mon profil</a></li>
                            <li><a class="dropdown-item" href={{ path('app_order_history') }}>Mes commandes</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_cart_index') }}">Mon panier</a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="{{ path('app_admin_dashboard') }}">Administration</a></li>
                            {% endif %}
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">D√©connexion</a></li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}
{% endfor %}

<main>
    {% block body %}{% endblock %}
</main>

<footer class="footer mt-5">
    <div class="container py-4">
        <div class="row">
            <div class="col-md-4">
                <h5><i class="fas fa-book"></i> Livres Rares</h5>
                <p>Votre librairie sp√©cialis√©e dans les livres rares et de collection.</p>
            </div>
            <div class="col-md-4">
                <h5>Liens utiles</h5>
                <ul class="list-unstyled">
                    <li><a href="{{ path('app_home') }}" class="text-light">Accueil</a></li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_products') }}">Livres</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-4">
                <h5>Contact</h5>
                <p>
                    <i class="fas fa-envelope"></i> contact@livresrares.com<br>
                    <i class="fas fa-phone"></i> XX XX XX XX<br>
                    <i class="fas fa-map-marker-alt"></i> Tunis, Tunisie
                </p>
            </div>
        </div>
        <hr class="my-4">
        <div class="text-center">
            <p>&copy; {{ "now"|date("Y") }} Livres Rares. Tous droits r√©serv√©s.</p>
        </div>
    </div>
</footer>

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function updateCartCount() {
            {% if app.user %}
            fetch('{{ path('app_cart_count') }}')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('cart-count').textContent = data.count;
                })
                .catch(error => console.error('Erreur:', error));
            {% endif %}
        }

        function addToCart(productId, quantity = 1) {
            {% if app.user %}
            fetch(`/cart/add/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: `quantity=${quantity}`
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        updateCartCount();
                        showNotification('Produit ajout√© au panier !', 'success');
                    }
                })
                .catch(error => console.error('Erreur:', error));
            {% else %}
            window.location.href = '{{ path('app_login') }}';
            {% endif %}
        }

        function showNotification(message, type = 'info') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    `;
            document.body.appendChild(alertDiv);

            // Auto-remove after 3 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 3000);
        }
    </script>
{% endblock %}
</body>
</html>

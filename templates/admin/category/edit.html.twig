{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie - Administration{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-md-2">
                <!-- Sidebar -->
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-cogs"></i> Administration</h5>
                    </div>
                    <div class="list-group list-group-flush">
                        <a href="{{ path('app_admin_dashboard') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-tachometer-alt"></i> Tableau de bord
                        </a>
                        <a href="{{ path('app_admin_product_index') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-book"></i> Produits
                        </a>
                        <a href="{{ path('app_admin_user_index') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-users"></i> Utilisateurs
                        </a>
                        <a href="{{ path('app_admin_category_index') }}" class="list-group-item list-group-item-action active">
                            <i class="fas fa-tags"></i> Catégories
                        </a>
                        <a href="{{ path('app_admin_order_index') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-shopping-cart"></i> Commandes
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Modifier la catégorie</h1>
                    <div>
                        <a href="{{ path('app_admin_category_index') }}" class="btn btn-secondary me-2">
                            <i class="fas fa-arrow-left"></i> Retour à la liste
                        </a>
                        <a href="{{ path('app_admin_category_show', {'id': category.id}) }}" class="btn btn-primary">
                            <i class="fas fa-eye"></i> Voir la catégorie
                        </a>
                    </div>
                </div>

                <!-- Flash messages -->
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Informations de la catégorie</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.slug) }}
                            {{ form_widget(form.slug, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.slug) }}
                            <div class="form-text">{{ form_help(form.slug) }}</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('app_admin_category_index') }}" class="btn btn-secondary me-md-2">Annuler</a>
                            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

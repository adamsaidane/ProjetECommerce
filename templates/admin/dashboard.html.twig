{% extends 'base.html.twig' %}

{% block title %}Administration - Livres Rares{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-md-2">
                <!-- Sidebar -->
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-cogs"></i> Administration</h5>
                    </div>
                    <div class="list-group list-group-flush">
                        <a href="{{ path('app_admin_dashboard') }}" class="list-group-item list-group-item-action active">
                            <i class="fas fa-tachometer-alt"></i> Tableau de bord
                        </a>
                        <a href="{{ path('app_admin_product_index') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-book"></i> Produits
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="fas fa-tags"></i> Catégories
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="fas fa-shopping-cart"></i> Commandes
                        </a>
                        <a href="{{ path('app_admin_user_index') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-users"></i> Utilisateurs
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-10">
                <h1 class="mb-4">Tableau de bord</h1>

                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>{{ stats.totalProducts }}</h4>
                                        <p>Produits total</p>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-book fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>{{ stats.activeProducts }}</h4>
                                        <p>Produits actifs</p>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-check-circle fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>{{ stats.totalUsers }}</h4>
                                        <p>Utilisateurs</p>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-users fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>{{ stats.totalOrders }}</h4>
                                        <p>Commandes</p>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-shopping-cart fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Recent Orders -->
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5>Commandes récentes</h5>
                            </div>
                            <div class="card-body">
                                {% if recentOrders %}
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                            <tr>
                                                <th>N° Commande</th>
                                                <th>Client</th>
                                                <th>Montant</th>
                                                <th>Statut</th>
                                                <th>Date</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for order in recentOrders %}
                                                <tr>
                                                    <td>{{ order.orderNumber }}</td>
                                                    <td>{{ order.user.fullName }}</td>
                                                    <td>{{ order.totalAmount }}€</td>
                                                    <td>
                                                            <span class="badge bg-{{ order.status == 'pending' ? 'warning' : 'success' }}">
                                                                {{ order.status|title }}
                                                            </span>
                                                    </td>
                                                    <td>{{ order.createdAt|date('d/m/Y H:i') }}</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                {% else %}
                                    <p class="text-muted">Aucune commande récente.</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Low Stock Products -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5>Stock faible</h5>
                            </div>
                            <div class="card-body">
                                {% if lowStockProducts %}
                                    {% for product in lowStockProducts %}
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <div>
                                                <strong>{{ product.title }}</strong><br>
                                                <small class="text-muted">{{ product.author }}</small>
                                            </div>
                                            <span class="badge bg-danger">{{ product.stock }}</span>
                                        </div>
                                        {% if not loop.last %}<hr>{% endif %}
                                    {% endfor %}
                                {% else %}
                                    <p class="text-muted">Aucun produit en stock faible.</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

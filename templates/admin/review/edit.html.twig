{% extends 'base.html.twig' %}

{% block title %}Modifier l'avis - Administration{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-md-2">
                <!-- Sidebar -->
                {% include 'admin/_sidebar.html.twig' with {'active': 'reviews'} %}
            </div>

            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Modifier l'avis</h1>
                    <div>
                        <a href="{{ path('app_admin_review_index') }}" class="btn btn-secondary me-2">
                            <i class="fas fa-arrow-left"></i> Retour Ã  la liste
                        </a>
                        <a href="{{ path('app_admin_review_show', {'id': review.id}) }}" class="btn btn-primary">
                            <i class="fas fa-eye"></i> Voir l'avis
                        </a>
                    </div>
                </div>

                <!-- Flash messages -->
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Informations de l'avis</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.product) }}
                                {{ form_widget(form.product) }}
                                {{ form_errors(form.product) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.user) }}
                                {{ form_widget(form.user) }}
                                {{ form_errors(form.user) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.rating) }}
                            {{ form_widget(form.rating) }}
                            {{ form_errors(form.rating) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.comment) }}
                            {{ form_widget(form.comment) }}
                            {{ form_errors(form.comment) }}
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('app_admin_review_index') }}" class="btn btn-secondary me-md-2">Annuler</a>
                            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
